<?xml version="1.0" encoding="UTF-8"?>
<resources>
 <style name="custombutton">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:background">@drawable/custombuttom</item>
    </style>

    <style name="custombutton.yellow">
        <item name="android:background">@drawable/custombuttomyellow</item>
    </style>

     <style name="custombutton.land">
        <item name="android:layout_margin">2dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
       
    </style>
    
     
     <style name="custombutton.small">
        <item name="android:layout_margin">1dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
       
    </style>
     
    </resources>